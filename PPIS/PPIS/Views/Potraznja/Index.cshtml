@model IEnumerable<PPIS.Models.Potraznja>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Pregeld potražnji</h2>

<p>
    @Html.ActionLink("Unesi novu potražnju", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OcjenaDobavljaca.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrioritetCijene)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RokIsporuke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrioritetRokaIsporuke)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OcjenaDobavljaca.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cijena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrioritetCijene)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RokIsporuke)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrioritetRokaIsporuke)
        </td>
        <td>
            @Html.ActionLink("Izmjena", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.ID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
