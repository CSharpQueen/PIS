@model IEnumerable<PPIS.Models.OcjenaDobavljaca>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Ocjena dobavljača</h2>

<p>
    @Html.ActionLink("Unesi novu ocjenu dobavljača", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dobavljac.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OcjenaCijene)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OcjenaRokaIporuke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IspostovaneStavkeUgovora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KvalitetIsporuke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Utisak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ocjena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpisnaOcjena)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dobavljac.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OcjenaCijene)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OcjenaRokaIporuke)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IspostovaneStavkeUgovora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KvalitetIsporuke)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Utisak)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocjena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpisnaOcjena)
        </td>
        <td>
            @Html.ActionLink("Izmjena", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.ID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
